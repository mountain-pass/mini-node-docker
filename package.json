{
  "name": "binary-scratch-dockerfile",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "./node_modules/.bin/pkg --debug --targets node10-alpine-x64 --output runme index.js",
    "build": "npm run build_scratch && npm run build_alpine && npm run build_node",
    "build_scratch": "docker build -f Dockerfile.scratch --tag runme-scratch .",
    "build_alpine": "docker build -f Dockerfile.alpine --tag runme-alpine .",
    "build_node": "docker build -f Dockerfile.node --tag runme-node .",
    "start_scratch": "docker run -it --rm runme-scratch",
    "start_alpine": "docker run -it --rm runme-alpine",
    "start_node": "docker run -it --rm runme-node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickgrealy/node-binary-scratch-dockerfile.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nickgrealy/node-binary-scratch-dockerfile/issues"
  },
  "homepage": "https://github.com/nickgrealy/node-binary-scratch-dockerfile#readme",
  "dependencies": {
    "pkg": "4.4.0"
  }
}
